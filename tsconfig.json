{
    "compilerOptions": {
      "outDir": "./built",
      "allowJs": true,
      "target": "es6",
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"],
    "exclude": [
      "node_modules"
    ]
  }